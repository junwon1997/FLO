<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_locker_album_cv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_locker_album_iv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_album_exp2" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_locker_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celebrity"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/item_locker_album_cv"
        app:layout_constraintTop_toTopOf="@id/item_locker_album_cv"
        app:layout_constraintBottom_toTopOf="@id/item_locker_album_singer_tv"

        />

    <TextView
        android:id="@+id/item_locker_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/item_locker_album_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_locker_album_title_tv"
        app:layout_constraintBottom_toTopOf="@id/item_locker_album_album_kind_tv"
        />

    <TextView
        android:id="@+id/item_locker_album_album_kind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스,팝"
        android:textSize="13sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/item_locker_album_singer_tv"
        app:layout_constraintStart_toStartOf="@id/item_locker_album_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_locker_album_cv"
        />

    <ImageView
        android:id="@+id/item_locker_album_player_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/item_locker_album_player_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintEnd_toStartOf="@id/item_locker_album_player_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>